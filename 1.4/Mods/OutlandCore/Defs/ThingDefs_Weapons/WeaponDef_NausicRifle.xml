<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="OutlandBaseMakeableGun">
		<defName>Outland_NausicRifle</defName>
		<label>nausic rifle</label>
		<description>A rudimentary rifle, only capable of single shots between reloads, typically used by travelers in the Toxic Forest.</description>
		<graphicData>
			<texPath>Outland/ToxicForest/Weapons/NausicRifle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Revolver</soundInteract>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<statBases>
			<WorkToMake>6000</WorkToMake>
			<Mass>1.4</Mass>
			<AccuracyTouch>0.75</AccuracyTouch>
			<AccuracyShort>0.60</AccuracyShort>
			<AccuracyMedium>0.40</AccuracyMedium>
			<AccuracyLong>0.30</AccuracyLong>
			<RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
			<li>NausicRangedAdvanced</li>
		</weaponTags>
		<recipeMaker>
			<researchPrerequisite>Smithing</researchPrerequisite>
			<skillRequirements>
				<Crafting>12</Crafting>
			</skillRequirements>
		</recipeMaker>
		<costList>
			<Steel>40</Steel>
			<WoodLog>5</WoodLog>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Outland_NausicRifleBullet</defaultProjectile>
				<warmupTime>1.3</warmupTime>
				<range>26.9</range>
				<soundCast>Shot_Revolver</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>grip</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>

	<ThingDef ParentName="OutlandBaseBullet">
		<defName>Outland_NausicRifleBullet</defName>
		<label>lead bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>17</damageAmountBase>
			<stoppingPower>1</stoppingPower>
			<speed>55</speed>
		</projectile>
	</ThingDef>

</Defs>