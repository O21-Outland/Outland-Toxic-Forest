<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ThingDef ParentName="PlantBase">
		<defName>Outland_PlantToxbeanRoot</defName>
		<label>toxbean root</label>
		<description>A fast growing root which produces a number of large edible beans around it, despite thriving only in toxic environments these beans actually decrease toxic buildup in living things when consumed, while reducing the rate of toxic buildup for a period afterwards.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.175</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Outland/ToxicForest/Plants/Toxbeans</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>14</pathCost>
		<ingestible />
		<plant>
			<fertilityMin>0.50</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>
			<maxMeshCount>1</maxMeshCount>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>Outland_RawToxbeans</harvestedThingDef>
			<harvestYield>6</harvestYield>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
			<growDays>3</growDays>
			<visualSizeRange>0.3~1.0</visualSizeRange>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
			<humanFoodPlant>true</humanFoodPlant>
			<pollution>PollutedOnly</pollution>
		</plant>
	</ThingDef>

	<ThingDef ParentName="PlantBase">
		<defName>Outland_PlantToxplum</defName>
		<label>toxplum</label>
		<description>A flowering crop that yields toxplums, an edible fruit which is also used to as an ingredient in the creation of anti-tox potions.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.2</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Outland/ToxicForest/Plants/Toxplum</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>14</pathCost>
		<ingestible />
		<plant>
			<fertilityMin>0.50</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>5</growDays>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>Outland_RawToxplums</harvestedThingDef>
			<drugForHarvestPurposes>True</drugForHarvestPurposes>
			<harvestYield>8</harvestYield>
			<sowMinSkill>3</sowMinSkill>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
			<visualSizeRange>0.3~1.05</visualSizeRange>
			<wildOrder>2</wildOrder>
			<immatureGraphicPath>Outland/ToxicForest/Plants/ToxplumImmature</immatureGraphicPath>
			<pollution>PollutedOnly</pollution>
		</plant>
	</ThingDef>

	<ThingDef ParentName="PlantBase">
		<defName>Outland_PlantToxmelon</defName>
		<label>toxmelon plant</label>
		<description>A plant producing a sweet, edible fruit, similar to that of a normal melon. Alone this fruit has no special benefits beyond just being a good source of nutrition in an otherwise hostile environment, however juice squeezed from the toxmelon is a vital ingredient in anti-tox potions.</description>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<Nutrition>0.4</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Outland/ToxicForest/Plants/Toxmelon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>30</pathCost>
		<ingestible />
		<plant>
			<fertilityMin>0.50</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<maxMeshCount>1</maxMeshCount>
			<harvestedThingDef>Outland_RawToxmelon</harvestedThingDef>
			<harvestYield>19</harvestYield>
			<sowWork>1000</sowWork>
			<harvestWork>1000</harvestWork>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<blockAdjacentSow>true</blockAdjacentSow>
			<harvestFailable>false</harvestFailable>
			<topWindExposure>0</topWindExposure>
			<growDays>10</growDays>
			<visualSizeRange>0.5~1.0</visualSizeRange>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
			<humanFoodPlant>true</humanFoodPlant>
			<immatureGraphicPath>Outland/ToxicForest/Plants/ToxmelonImmature</immatureGraphicPath>
			<pollution>PollutedOnly</pollution>
		</plant>
	</ThingDef>

</Defs>